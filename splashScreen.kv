########################################################################
## SPLASH SCREEN
########################################################################

MDScreen:
    name: "SplashScreen"
    on_enter: self.ids.progress.start()
    MDBoxLayout:

        MDFloatLayout:
            Image:

                source:'img/1538916389.jpg'
                pos_hint:{'center_x':.5,'center_y':.5}
                size_hint:1.5,1
                allow_stretch: True
                anim_delay: 0
                # anim_loop: 1
                anim_reset: True
                canvas.after:
                    Color:
                        rgba: 0,0,0,.7
                    Rectangle:
                        size: self.size
                        pos: self.pos
            BoxLayout:
                pos_hint:{'center_y':.145, 'center_x':.5}
                padding: "10dp"
                size_hint_x: .7

                # Add progress bar
                MDProgressBar:
                    # Set progress id
                    id: progress
                    # Set orientation
                    orientation: "horizontal"
                    # Set progress type
                    type: "determinate"
                    # Progress duratio
                    running_duration: 1
                    # Catching duration
                    catching_duration: 1
                    color:(255/255,15/255,0/255,1)

            MDLabel:
                color:(255/255,15/255,0/255,1)
                pos_hint:{'center_y':.1}
                text:"Property of Danke Vill'etti"
                font_style:'Body2'
                halign: "center"

        




































