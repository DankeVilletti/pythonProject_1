MDScreen:
    id:initialize

    name: 'initialize'

    MDFloatLayout:
        Image:
            source:'img/BMW-M2-Coupe-2015-2560x1600-048 (1).jpg'
            pos_hint:{'center_x':-.3,'center_y':.5}
            size_hint:3.8,1
            allow_stretch: True
            anim_delay: 0
            # anim_loop: 1
            anim_reset: True
            canvas.after:
                Color:
                    rgba: 0,0,0,.3
                Rectangle:
                    size: self.size
                    pos: self.pos
        MDCard:
            radius:20
            size_hint:.95,.7
            md_bg_color:1,1,1,.7
            pos_hint:{'center_y':.5, 'center_x':.5}
            MDFloatLayout:
                id:slide_1
                MDTextField:
                    id:login
                    size_hint_x:.7
                    pos_hint:{'center_y':.55, 'center_x':.5}
                    line_color_normal:rgba(178,178,178,255)
                    line_color_focus: rgba(20,20,20,255)
                    helper_text: "Введите ваш логин"
                    helper_text_mode:"persistent"

                    required: True

                ClickableTextFieldRound:
                    id:password
                    size_hint_x: .7

                    #hint_text: "Password"
                    pos_hint: {"center_x": .5, "center_y": .4}
                MDIconButton:
                    id:dots_horizontal
                    icon:'chevron-left'
                    pos_hint:{'x':0,'center_y':.5}



                    on_release:
                        app.root.current = 'login'
                        app.root.transition.direction = 'right'




                Button:
                    id:go_in
                    text:"Войти"
                    size_hint:.66,.065
                    background_color:0,0,0,0
                    pos_hint:{'center_x':.5,'center_y':.2}
                    on_release:
                        app.root.current = 'Five'
                        app.root.transition.direction = 'left'

                    canvas.before:
                        Color:
                            rgb:rgba(0,207,255,255)
                        RoundedRectangle:
                            size:self.size
                            pos:self.pos
                            radius:[5,]



<ClickableTextFieldRound>:

    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        #hint_text: root.hint_text
        text: root.text
        password: True
        icon_left: "key-variant"
        line_color_normal:rgba(178,178,178,255)
        line_color_focus: rgba(20,20,20,255)
        helper_text: "Придумайте пароль"
        helper_text_mode:"persistent"
        required: True

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .55}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True